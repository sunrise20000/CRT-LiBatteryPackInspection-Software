        <GradientStop Offset="0.25" Color="#FF003F0F" />
        <GradientStop Offset="1" Color="#FF067421" />
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="OnOffButton_BG_Highlight">
        <GradientStop Offset="0" Color="#FF89FFA6" />
        <GradientStop Offset="1" Color="#FF00FF3F" />
    </RadialGradientBrush>
