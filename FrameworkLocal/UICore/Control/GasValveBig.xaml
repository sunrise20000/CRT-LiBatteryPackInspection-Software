<UserControl x:Class="Aitex.Core.UI.Control.GasValveBig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="42" Width="42" MaxHeight="42"  BorderThickness="0" BorderBrush="Aqua" MaxWidth="42" MinHeight="42" MinWidth="42">
    
    <UserControl.RenderTransform>
        <RotateTransform x:Name="rotateTransform" Angle="0" CenterX="7.5" CenterY="7.5"/>
    </UserControl.RenderTransform>

    <Canvas  Opacity="1" Background="Transparent" MouseRightButtonUp="Canvas_MouseRightButtonUp" MouseEnter="Canvas_MouseEnter" MouseLeave="Canvas_MouseLeave">

        <Polygon Name="passtrigle" Points="0,0 0,24 42,13" Fill="Green" Opacity="1" Height="32" Canvas.Left="0" Canvas.Top="8" Width="40" />
        <Polygon Name="nopass" Opacity="1" Points="2,0 2,42 42,42 42,0"   Fill="Black" Height="40" Canvas.Left="12" Canvas.Top="0" Width="16" />
    </Canvas>
</UserControl>
