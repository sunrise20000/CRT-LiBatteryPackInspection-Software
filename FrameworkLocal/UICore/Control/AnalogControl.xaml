<UserControl x:Class="Aitex.Core.UI.Control.AnalogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  Height="20" Width="45" BorderThickness="1">
    <Grid  Height="20"  MouseLeftButtonUp="Grid_MouseLeftButtonUp" Cursor="Hand"  Opacity="1" MouseEnter="Grid_MouseEnter">
        <Border Background="Transparent" x:Name="bdRectangle" BorderThickness="1">
            <Rectangle  RadiusX="2" RadiusY="2" Name="rectBkground" Stroke="Gray" Margin="1" Opacity="1" Fill="Green" StrokeThickness="1"/>
        </Border>
        <Label Content="0.0" FontFamily="Arial,SimSun" FontSize="9" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="labelValue" Margin="0,-2,-2,0" Foreground="LightYellow" />
    </Grid>
</UserControl>
