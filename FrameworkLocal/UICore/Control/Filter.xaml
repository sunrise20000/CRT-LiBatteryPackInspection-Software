<UserControl x:Class="Aitex.Core.UI.Control.Filter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Height="20" Width="20" MinHeight="20" MinWidth="20" MaxHeight="20" MaxWidth="20" BorderThickness="1 1 1 1">
    <UserControl.RenderTransform>
        <RotateTransform x:Name="rotateTransform" Angle="0" CenterX="10" CenterY="10"/>
    </UserControl.RenderTransform>
    <Grid Name="grid">
        <Polygon Name="filter" Points="1,9 9,0 17,9 9,18" Stroke="Black" StrokeThickness="1" Fill="White"/>
        <Line X1="9" Y1="0" X2="9" Y2="18" Stroke="Black" StrokeThickness="1" Name="LineHoriCross"/>
    </Grid>
</UserControl>

