<UserControl x:Class="Aitex.Core.UI.Control.Valve"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="15" Width="15" MaxHeight="15"  BorderThickness="1"  MaxWidth="15" MinHeight="15" MinWidth="15">
    <!--BorderBrush="Aqua"-->
    <UserControl.RenderTransform>
        <RotateTransform x:Name="rotateTransform" Angle="0" CenterX="7.5" CenterY="7.5"/>
    </UserControl.RenderTransform>

    <Canvas  Opacity="1" Background="Transparent" MouseRightButtonUp="Canvas_MouseRightButtonUp" MouseEnter="Canvas_MouseEnter" MouseLeave="Canvas_MouseLeave">
        <!--<Canvas Name="nopass" Visibility="Hidden" Cursor="Hand" MouseLeftButtonDown="nopass_MouseLeftButtonDown"></Canvas>-->
        <Polygon Name="passtrigle" Opacity="1" Points="0,0 0,10 15,5" Fill="Green" Height="11.25" Canvas.Left="0" Canvas.Top="1.75" Width="14.8" />

        <Polygon Name="nopass" Opacity="1" Points="2,0 2,14 14,14 14,0"   Fill="Black" Height="13" Canvas.Left="2.145" Canvas.Top="0" Width="7.25" />
    </Canvas>
</UserControl>