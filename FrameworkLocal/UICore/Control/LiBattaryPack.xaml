<UserControl x:Class="MECF.Framework.UI.Core.Control.LiBatteryPack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converer="clr-namespace:MECF.Framework.UI.Core.Converters"
             xmlns:local="clr-namespace:MECF.Framework.UI.Core.Control"
             mc:Ignorable="d" d:Height="44" d:Width="142"
             SnapsToDevicePixels="True">
    <UserControl.Resources>
        <converer:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
     
        
        <!--电池图片样式-->
        <Style TargetType="Image">
            <Setter Property="Stretch" Value="None"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Visibility" 
                    Value="{Binding IsShowBattery, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Style>

        <!--电池高亮边框样式-->
        <Style TargetType="Path">
            <Setter Property="Stroke" Value="#00f05923"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="StrokeThickness" Value="1.0"/>
            <Setter Property="StrokeMiterLimit" Value="1.0"/>
            <Setter Property="Stretch" Value="Fill"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames  Storyboard.TargetProperty="(Path.Stroke).(SolidColorBrush.Color)">
                                    <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#fff05923"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Path.Stroke).(SolidColorBrush.Color)">
                                    <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#00f05923"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- #region Top View -->
        <Canvas x:Name="cavTopView" Visibility="Visible">
            <Image Source="/MECF.Framework.UI.Core;component/Resources/Battery/Batt_Top.png" />

            <Path 
              Data="F1 M 2557.233,658.071 L 2462.410,658.071 C 2461.716,658.071 2461.154,658.634 2461.154,659.328 L 2461.154,680.990 C 2461.154,681.684 2461.716,682.246 2462.410,682.246 L 2557.233,682.246 C 2557.927,682.246 2558.490,681.684 2558.490,680.990 L 2558.490,659.328 C 2558.490,658.634 2557.927,658.071 2557.233,658.071 Z" 
              Canvas.Left="7" Canvas.Top="5" Height="35" Width="133">
            </Path>


        </Canvas>
        <!-- #endregion -->

        <!-- #region Side1 View -->
        <Canvas x:Name="cavSide1View" Visibility="Hidden">
            <Image Source="/MECF.Framework.UI.Core;component/Resources/Battery/Batt_Side1.png"/>


            <Path
              Data="F1 M 2741.119,637.906 L 2734.488,637.906 L 2734.488,629.807 L 2724.219,629.807 L 2724.219,637.906 L 2665.080,637.906 L 2665.080,629.807 L 2654.810,629.807 L 2654.810,637.906 L 2646.296,637.906 C 2645.602,637.906 2645.040,638.469 2645.040,639.162 L 2645.040,698.638 C 2645.040,699.332 2645.602,699.894 2646.296,699.894 L 2741.119,699.894 C 2741.813,699.894 2742.375,699.332 2742.375,698.638 L 2742.375,639.162 C 2742.375,638.469 2741.813,637.906 2741.119,637.906 Z" 
              Canvas.Left="15.6" Canvas.Top="16.2" Height="96"  Width="131">
            </Path>


        </Canvas>
        <!-- #endregion -->

        <!-- #region Side2 View -->
        <Canvas x:Name="cavSide2View" Visibility="Hidden">

            <Image Source="/MECF.Framework.UI.Core;component/Resources/Battery/Batt_Side2.png" />


            <Path
              Data="F1 M 2897.756,621.491 L 2838.281,621.491 C 2837.587,621.491 2837.024,622.053 2837.024,622.747 L 2837.024,629.378 L 2828.926,629.378 L 2828.926,639.647 L 2837.024,639.647 L 2837.024,698.787 L 2828.926,698.787 L 2828.926,709.056 L 2837.024,709.056 L 2837.024,717.570 C 2837.024,718.264 2837.587,718.827 2838.281,718.827 L 2897.756,718.827 C 2898.450,718.827 2899.012,718.264 2899.012,717.570 L 2899.012,622.747 C 2899.012,622.053 2898.450,621.491 2897.756,621.491 Z" 
              Canvas.Left="16.8" Canvas.Top="17" Height="131" Width="95">
            </Path>


        </Canvas>
        <!-- #endregion -->

    </Grid>

</UserControl>
