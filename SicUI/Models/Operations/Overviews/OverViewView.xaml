                            </Button>

                            <Button
                                Canvas.Left="77"
                                Canvas.Top="167"
                                Width="110"
                                Height="35"
                                Content="Manual"
                                IsEnabled="{Binding IsEnableManual}">
                                <i:Interaction.Triggers>
