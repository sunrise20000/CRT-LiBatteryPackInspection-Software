<UserControl x:Class="SicUI.Controls.SlitDoor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SicUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="209" Width="19">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Open" Click="Open"/>
                <MenuItem Header="Close" Click="Close"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <Rectangle  Fill="{Binding SlitDoorBackgroud}" Width="8" VerticalAlignment="Top" Height="115"   />
        <Rectangle  Fill="{Binding SlitDoorBackgroud}" Width="8" VerticalAlignment="Bottom" Height="115"  />
    </Grid>
</UserControl>
